<BackgroundColor@Widget>:
    background_color:       (.169, .169, .169, 1)
    canvas.before:
        Color:
            rgba:           root.background_color
        Rectangle:
            size:           self.size
            pos:            self.pos

<BackgroundLabel@Label+BackgroundColor>:
    background_color:       (0, 0, 0, 0)
    color:                  cl_tex
    font_size:              18

<FlatButton@ButtonBehavior+BackgroundLabel>

<Button>:
    size_hint_y:            None
    height:                 50
    font_size:              18
    background_normal:      ""
    background_color:       c3
    color:                  cl_tex

<ToggleButton@Button>

<MainMenu>:
    id:                     main_win
    orientation:            "vertical"
    padding:                0.2
    canvas.before:
        Color:
            rgba:           (.0, .0, .1, 1)    # Colors from 0 to 1, red, green, blue, alpha
        Rectangle:
            size:           self.size
            pos:            self.pos

    BoxLayout:
        size_hint_y:            None
        height:                 35
        padding:                (0, .5)
        BoxLayout:
            size_hint_x:            .382
            FlatButton:
                text:               "Menu"
                background_normal:  ''
                background_color:   c1
                size_hint_x:        None
                width:              100
            BackgroundLabel:
                background_color:   c1
        BoxLayout:
            BackgroundLabel:
                text:               "   AMB Post-Processor"
                background_color:   c1
                text_size:          self.size
                halign:             "left"
                valign:             "middle"
                font_size:          20
            FlatButton:
                text:               "x"
                background_normal:  ''
                background_color:   c1
                text_size:          self.size
                halign:             "center"
                valign:             "middle"
                size_hint_x:        None
                width:              30
                on_release:         app.stop()
    BoxLayout:
        padding:                    (0, 1.5)
        RecycleView:
            id:                     cont_proj_list
            viewclass:              "Button"
            data:                   [{'text': 'Project_1'}, {'text': 'Project_2'}, {'text': 'Project_3'}, {'text': 'Project_4'}]
            size_hint_x:            .382
            RecycleGridLayout:
                cols:                   1
                default_size:           (None, None)
                default_size_hint:      (1, None)
                padding:                (2, 1)
                spacing:                1
                height:                 self.minimum_height
                canvas.before:
                    Color:
                        rgba:           c2
                    Rectangle:
                        size:           self.size
                        pos:            self.pos
#            Button:
#                text:               "Project_1"
#            Button:
#                text:               "Project_2"
        GridLayout:
            cols: 3
            BoxLayout:
                size_hint_x:        0.4
                BackgroundLabel:
                    background_color:   c4
            BoxLayout:
                size_hint_x:        .618
                orientation:        "vertical"
                spacing:            10
                canvas.before:
                    Color:
                        rgba:       c4
                    Rectangle:
                        size:       self.size
                        pos:        self.pos
                Label:
                    text:           ""
                    size_hint_y:    .4
                FlatButton:
                    id:             btn_add_proj
                    text:           "Add Project"
                    size_hint_y:    None
                    size:           self.texture_size
                    text_size:      self.size
                    halign:         "left"
                    font_size:      20
                    bold:           True
                FlatButton:
                    id:             btn_open_proj
                    text:           "Open Project"
                    size_hint_y:    None
                    size:           self.texture_size
                    text_size:      self.size
                    halign:         "left"
                    font_size:      20
                    bold:           True
                FlatButton:
                    id:             btn_dupl_proj
                    text:           "Duplicate Project"
                    size_hint_y:    None
                    size:           self.texture_size
                    text_size:      self.size
                    halign:         "left"
                    font_size:      20
                    bold:           True
                FlatButton:
                    id:             btn_dele_proj
                    text:           "Delete Project"
                    size_hint_y:    None
                    size:           self.texture_size
                    text_size:      self.size
                    halign:         "left"
                    font_size:      20
                    bold:           True
                Label:
                    text:           ""
                    size_hint_y:    .4
            BoxLayout:
                size_hint_x:        0.25
                BackgroundLabel:
                    background_color:   c4
    BackgroundLabel:
        text:                   "Copyright by AMIC Angewandte Micro-Messtechnik GmbH    "
        background_color:       c1
        size_hint_y:            None
        height:                 25
        text_size:              self.size
        halign:                 "right"
        valign:                 "middle"
        font_size:              12

