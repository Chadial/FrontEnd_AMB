#: import Window kivy.core.window.Window
#: import AppMenu,AppMenuTextItem,ContextMenu,ContextMenuTextItem kivy.garden.contextmenu
#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import CardTransition kivy.uix.screenmanager.CardTransition
#:set left_out CardTransition(mode="pop", direction="left", duration=".25")
#:set right_in CardTransition(mode="push", direction="right", duration=".25")
#:set up_in CardTransition(mode="push", direction="up", duration=".25")
#:set down_out CardTransition(mode="pop", direction="down", duration=".25")

# Colors
#:set transp (0, 0, 0, 0)  #
#:set blck_0 (.120, .120, .120, .1)  #
#:set blck_1 (.120, .120, .120, 1.)  #
#:set grey_0 (.169, .169, .169, 1.)  #
#:set grey_1 (.196, .196, .196, 1.)  #
#:set grey_2 (.192, .200, .208, 1.)  #
#:set grey_3 (.235, .247, .255, 1.)  #
#:set grey_4 (.306, .322, .329, 1.)  #
#:set grey_5 (.333, .333, .333, 1.)  #
#:set grey_6 (.349, .357, .365, 1.)  #

#:set cl_tex (.686, .694, .702, 1)  # text_color

#:set enbl_color (.3, .3, .3, 1.)
#:set disa_color (.5, .5, .5, 1.)

# Layouts
<Button>:
    size_hint_y:            None
    font_size:              18
    color:                  cl_tex

<ListButton>:
    size_hint_y:                None
    background_down:            ""
    background_color:           grey_6 if self.state == "down" else grey_6
    background_disabled_down:   ""
    background_disabled_normal: ""
    color:                      cl_tex
    border_radius:              0
    size:                       self.texture_size[0], 50
    strip_border:               True

<ProjectGridLayout>:
    size_hint_y:                None
    height:                     Window.height * 1.2
    # TODO Adapt container height:      Adapt height to Project list height, Minimum: size_hint_y: 1 if Window.height (GridLayout.height) > ProjectList.height

<SampleGridLayout>:
    size_hint_y:                None
    height:                     Window.height * 1.2
    # TODO Adapt container height:      Adapt height to Sample list height, Minimum: size_hint_y: 1 if Window.height (GridLayout.height) > ProjectList.height

# kivy garden Contextmenu
<MainMenu>:
    main_menu:                          "main_menu"
    AppMenu:
        id:                             main_menu
        canvas.before:
            Color:
                rgba:                   grey_1
            Rectangle:
                pos:                    self.pos
                size:                   self.size
        size_hint_x:                    0.318
        size:                           self.size
        pos:                            2.5, -2.5 + Window.size[1] - self.size[1]
        cancel_handler_widget:          root
        AppMenuTextItem:
            text:                       "Menu"
            background_down:            ""
            background_color:           blck_1 if self.state == "down" else blck_0
            background_disabled_down:   ""
            background_disabled_normal: ""
            ContextMenu:
                ContextMenuTextItem:
                    id:                 mm_main_scrn_btn
                    text:               "Main Screen"
                    on_release:         app.root.ids.main_mng.current = 'main_scrn'
                    on_release:         app.root.ids.main_mng.transition = up_in
                    on_release:         app.root.ids.head.ids.head_text.text = " AMB Post-Processor"
                    on_release:         root.close_menu()
                ContextMenuTextItem:
                    id:                 mm_proj_scrn_btn
                    text:               "Project Screen"
                    on_release:         app.root.ids.main_mng.current = 'proj_scrn'
                    on_release:         app.root.ids.main_mng.transition = down_out
                    on_release:         app.root.ids.head.ids.head_text.text = " Project Screen"
                    on_release:         root.close_menu()
                ContextMenuTextItem:
                    id:                 mm_add_prj_btn
                    text:               "Add Project"
                    on_release:         print(list((app.get_running_app()).root.ids.main_mng.ids))
                    on_release:         print(list((app.get_running_app()).root.ids.main_mng.ids.main_scrn.ids))
                    on_release:         root.close_menu()
                ContextMenuTextItem:
                    id:                 mm_exit_btn
                    text:               "Exit"
                    on_release:         root.close_menu()
                    on_release:         quit()

# ScreenManagers
<MainManager>:
    main_mng:       "main_mng"
    transition:     down_out
    MainScreen:
        id:         main_scrn
    ProjectScreen:
        id:         proj_scrn

<SubManager>:
    sub_mng:        "sub_mng"
    transition:     left_out
    OverviewScreen:
    SampleScreen:

# Screens
<MainScreen>:
    main_scrn:                  cont_proj_list
    name:                       'main_scrn'
    BoxLayout:
        padding:                (1, 0)
        RecycleView:
            canvas.before:
                Color:
                    rgba:       grey_1
                Rectangle:
                    pos:        self.pos
                    size:       self.size
            size_hint_x:        0.318*1.5
            do_scroll_x:        False
            scroll_type:        ['bars', 'content']
            value_track_color:  [0, 0, 0, 0]
            ProjectGridLayout:
                id:             cont_proj_list
                spacing:        0
                cols:           1
        BoxLayout:
            canvas.before:
                Color:
                    rgba:               blck_1
                Rectangle:
                    pos:                self.pos
                    size:               self.size
            Label:
                size_hint_x:    1.3
            BoxLayout:
                orientation:    "vertical"
                Label:
                ListButton:
                    id:         ope_prj_btn
                    text:       'Open Project'
                    text_size:  self.size
                    halign:     "left"
                    valign:     "middle"
                    background_color:           blck_1 if self.state == "down" else transp
                    on_release: root.show_pop(window=0)
                ListButton:
                    id:         add_prj_btn
                    text:       'Add Project'
                    text_size:  self.size
                    halign:     "left"
                    valign:     "middle"
                    background_color:           blck_0 if self.state == "down" else transp
                    on_release: root.show_pop(window=1)
                ListButton:
                    id:         dup_prj_btn
                    text:       'Duplicate Project'
                    text_size:  self.size
                    halign:     "left"
                    valign:     "middle"
                    background_color:           blck_0 if self.state == "down" else transp
                    on_release: root.show_pop(window=2)
                ListButton:
                    id:         del_prj_btn
                    text:       'Delete Project'
                    text_size:  self.size
                    halign:     "left"
                    valign:     "middle"
                    background_color:           blck_0 if self.state == "down" else transp
                    on_release: root.show_pop(window=3)
                Label:
            Label:

<OverviewScreen>:
    name:                       'over_scrn'
    BoxLayout:
        canvas.before:
            Color:
                rgba:           blck_1
            Rectangle:
                pos:            self.pos
                size:           self.size
        orientation:            "vertical"
        Button:
            size_hint_y:        .1
            text:               'Project Overview'
            on_release:         app.root.ids.main_mng.current = 'main_scrn'
            on_release:         app.root.ids.main_mng.transition = down_out
        Label:

<SampleScreen>:
    name:                       'samp_scrn'
    BoxLayout:
        canvas.before:
            Color:
                rgba:           blck_1
            Rectangle:
                pos:            self.pos
                size:           self.size
        orientation:            "vertical"
        # TODO Next Screen Level:               Include nested ScreenManager with Tabs and Functions (Converting, Merging, Plotting)
        # TODO Dynamic Sample Button list:      Has to be changed later if Sample buttons are added dynamically from within Python
        Button:
            size_hint_y:        .11
            text:               'Sample'
            on_release:         app.root.ids.main_mng.current = 'main_scrn'
            on_release:         app.root.ids.main_mng.transition = down_out
            on_release:         app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.current = 'over_scrn'
            # TODO Default SubScreen Screen:    Change back to default Overview screen when leaving Sample Screen to Project Screen or Main Screen
        Label:

<ProjectScreen>:
    name:                       'proj_scrn'
    BoxLayout:
        padding:                (1, 0)
        RecycleView:
            canvas.before:
                Color:
                    rgba:       grey_1
                Rectangle:
                    pos:        self.pos
                    size:       self.size
            size_hint_x:        0.318*1.5
            size:               self.size
            do_scroll_x:        False
            scroll_type:        ['bars', 'content']
            SampleGridLayout:
                id:             cont_samp_list
                spacing:        1
                cols:           1
                ListButton:
                    text:       'Overview'
                    on_release: app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.current = 'over_scrn'
                    on_release: app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.transition = right_in
                ListButton:
                    text:       'Sample 01'
                    on_release: app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.current = 'samp_scrn'
                    on_release: app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.transition = left_out
        SubManager:
            id:                 sub_mng

# Spinners
<ProjListSpinner>:
    size_hint_x:                .98
    size:                       self.texture_size[0], 45
    pos_hint:                   {'center': (.5, .5)}
    text:                       ' '
    background_down:            ""
    background_color:           grey_6 if self.state == "down" else grey_6
    background_disabled_down:   ""
    background_disabled_normal: ""
    color:                      cl_tex

# Popups
<ope_prj_pop>:
    Label:
        text:           " Select Project"
        size_hint_y:    0.2
        pos_hint:       {"x": 0, "top": 1}
        text_size:      self.size
        halign:         "left"
        valign:         "middle"
    ProjListSpinner:
        id:             proj_list_spin
        values:         root.prj_list
    BoxLayout:
        pos_hint:       {"x": 0, "top": 1}
        Label:
            size_hint_x:    .02
        ListButton:
            id:             okay
            text:           "Open"
            size:           self.texture_size[0], 40
            font_size:      16
        Label:
            size_hint_x:    .05
        ListButton:
            id:             cancel
            text:           "Cancel"
            size:           self.texture_size[0], 40
            font_size:      16
        Label:
            size_hint_x:    .02

<add_prj_pop>:
    id:                 added_proj
    Label:
        text:           " Enter Name of new Project"
        size_hint_y:    0.2
        pos_hint:       {"x": 0, "top": 1}
        text_size:      self.size
        halign:         "left"
        valign:         "middle"
    TextInput:
        id:             add_proj
        text:           ""
        hint_text:      "Project name"
        font_size:      18
        size_hint:      (.98, None)
        height:         36
        pos_hint:       {'center': (.5, .5)}
        focus:          True
        multiline:      False
        cursor_blink:   True
        cursor_color:   (0,0,0,1)
    BoxLayout:
        pos_hint:       {"x": 0, "top": 1}
        Label:
            size_hint_x:    .02
        ListButton:
            id:             okay
            text:           "Add"
            size:           self.texture_size[0], 40
            font_size:      16
            on_release:
                root._add_prj(add_proj.text)
                print(app.root.ids.main_mng.ids.main_scrn.on_enter())
                app.root.ids.main_mng.ids.main_scrn.on_enter()
        Label:
            size_hint_x:    .05
        ListButton:
            id:             cancel
            text:           "Cancel"
            size:           self.texture_size[0], 40
            font_size:      16
            on_release:     added_proj.value = ""
        Label:
            size_hint_x:    .02

<dup_prj_pop>:
    Label:
        text:           " Select Project to copy"
        size_hint_y:    0.2
        pos_hint:       {"x": 0, "top": 1}
        text_size:      self.size
        halign:         "left"
        valign:         "middle"
    ProjListSpinner:
        id:             proj_list_spin
    BoxLayout:
        pos_hint:       {"x": 0, "top": 1}
        Label:
            size_hint_x:    .02
        ListButton:
            id:             okay
            text:           "Duplicate"
            size:           self.texture_size[0], 40
            font_size:      16
        Label:
            size_hint_x:    .05
        ListButton:
            id:             cancel
            text:           "Cancel"
            size:           self.texture_size[0], 40
            font_size:      16
        Label:
            size_hint_x:    .02

<del_prj_pop>:
    Label:
        text:           " Select Project for deleting"
        size_hint_y:    0.2
        pos_hint:       {"x": 0, "top": 1}
        text_size:      self.size
        halign:         "left"
        valign:         "middle"
    ProjListSpinner:
        id:             proj_list_spin
    BoxLayout:
        pos_hint:       {"x": 0, "top": 1}
        Label:
            size_hint_x:    .02
        ListButton:
            id:             okay
            text:           "Delete"
            size:           self.texture_size[0], 40
            font_size:      16
        Label:
            size_hint_x:    .05
        ListButton:
            id:             cancel
            text:           "Cancel"
            size:           self.texture_size[0], 40
            font_size:      16
        Label:
            size_hint_x:    .02

# Windows
<Header>:
    name:                       "head"
    size_hint_y:                None
    height:                     35
    padding:                    (1, 0)
    BoxLayout:
        canvas.before:
            Color:
                rgba:           grey_0
            Rectangle:
                pos:            self.pos
                size:           self.size
        Label:
        Label:
            id:                 head_text
            size_hint_x:        .682*3
            text:               " AMB Post-Processor"
            font_size:          18
            text_size:          self.size
            halign:             "left"
            valign:             "middle"
            color:              cl_tex

<Footer>:
    name:                       "foot"
    size_hint_y:                None
    height:                     25
    padding:                    (1, 0)
    canvas.before:
        Color:
            rgba:               grey_0
        Rectangle:
            pos:                self.pos
            size:               self.size
    Label:
        text:                   "Copyright by AMIC Angewandte Micro-Messtechnik GmbH     "
        font_size:              10
        text_size:              self.size
        halign:                 "right"
        valign:                 "middle"
        color:                  cl_tex

<ClassAllScreen>:
    main_win:                   "main_win"
    orientation:                'vertical'
    id:                         main_win

    Header:
        id:                     head
    MainManager:
        id:                     main_mng
    Footer:
    MainMenu:
#        size_hint_x:            0.318
        size_hint_y:            None
        height:                 0
