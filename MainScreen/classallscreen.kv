#: import Window kivy.core.window.Window
#: import AppMenu,AppMenuTextItem,ContextMenu,ContextMenuTextItem kivy.garden.contextmenu
#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import CardTransition kivy.uix.screenmanager.CardTransition
#:set left_out CardTransition(mode="pop", direction="left", duration=".5")
#:set right_in CardTransition(mode="push", direction="right", duration=".5")
#:set up_in CardTransition(mode="push", direction="up", duration=".6")
#:set down_out CardTransition(mode="pop", direction="down", duration=".6")

# Layouts
<ListButton>:
    size_hint_y:                None
#    height:                     Window.height * 0.5
#    height:                     500
    background_down:            ""
    background_color:           (.2, .2, .2, .5) if self.state == "down" else (.5, .5, .5, 1)
    background_disabled_down:   ""
    background_disabled_normal: ""
#    border:                     (1, 1, 1, 1)
    border_radius:              0
    size:                       self.texture_size[0], 50
    strip_border:               True

<ProjectGridLayout>:
    cont_proj_list: "cont_proj_list"
    size_hint_y:    None
    height:         Window.height * 1.5
    # TODO Adapt container height:      Adapt height to Project list height, Minimum: size_hint_y: 1 if Window.height (GridLayout.height) > ProjectList.height

<SampleGridLayout>:
    cont_samp_list: "cont_samp_list"
    size_hint_y:    None
    height:         Window.height * 1.5
    # TODO Adapt container height:      Adapt height to Sample list height, Minimum: size_hint_y: 1 if Window.height (GridLayout.height) > ProjectList.height

# kivy garden Contextmenu
<MainMenu>:
    main_menu:             "main_menu"
    AppMenu:
        id:         main_menu
        size_hint_x:0.318
#        size:       self.size
        pos:        2.5, -2.5 + Window.size[1] - self.size[1]
        cancel_handler_widget:  root
        AppMenuTextItem:
            text:   "Menu"
            ContextMenu:
                ContextMenuTextItem:
                    text:   "Add Project"
                ContextMenuTextItem:
                    text:   "Exit"
                    on_release: quit()

# ScreenManagers
<MainManager>:
    main_mng:       "main_mng"
    transition:     down_out
    MainScreen:
    ProjectScreen:
        id:         proj_scrn

<SubManager>:
    sub_mng:        "sub_mng"
    transition:     left_out
#    on_pre_enter:   app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.current = 'over_scrn'
    # TODO Default SubScreen Screen:            Maybe on_pre_enter rule applicable, while leaving from Sample Screen to Project Screen or Main Screen
    OverviewScreen:
    SampleScreen:

# Screens
<MainScreen>:
    name:                       'main_scrn'
    BoxLayout:
        padding:                (1, 0)
        RecycleView:
            canvas.before:
                Color:
                    rgba:               (.5, .5, .5, 1)
                Rectangle:
                    pos:                self.pos
                    size:               self.size
            size_hint_x:        0.318*1.5
            do_scroll_x:        False
            scroll_type:        ['bars', 'content']
            ProjectGridLayout:
                id:             cont_proj_list
                spacing:        0
                cols:           1
                # TODO Dynamic Project Button List:      Generate method to create Project Buttons from list
                # TODO Calc height Project Button list:  Calculate the multiple height of the Button list
                ListButton:
                    text:       'Project A'
                    on_release: root.manager.current = 'proj_scrn'
                    on_release: root.manager.transition = up_in
                ListButton:
                    text:       'Project B'
                    on_release: root.manager.current = 'proj_scrn'
                    on_release: root.manager.transition = up_in
                ListButton:
                    text:       'Project C'
                    on_release: root.manager.current = 'proj_scrn'
                    on_release: root.manager.transition = up_in
                ListButton:
                    text:       'Project D'
                    on_release: root.manager.current = 'proj_scrn'
                    on_release: root.manager.transition = up_in
        BoxLayout:
            canvas.before:
                Color:
                    rgba:               (.2, .2, .2, 1)
                Rectangle:
                    pos:                self.pos
                    size:               self.size
            Label:
            BoxLayout:
                orientation:    "vertical"
                Label:
                ListButton:
                    background_color:           (.2, .2, .2, 1) if self.state == "down" else (.2, .2, .2, 0)
                    text:       'Open Project'
                ListButton:
                    background_color:           (.2, .2, .2, 1) if self.state == "down" else (.2, .2, .2, 0)
                    text:       'Add Project'
                ListButton:
                    background_color:           (.2, .2, .2, 1) if self.state == "down" else (.2, .2, .2, 0)
                    text:       'Duplicate Project'
                ListButton:
                    background_color:           (.2, .2, .2, 1) if self.state == "down" else (.2, .2, .2, 0)
                    text:       'Delete Project'
                Label:
            Label:

<OverviewScreen>:
    name:                   'over_scrn'
    BoxLayout:
        Button:
            text:           'Overview 2'
            on_release:     app.root.ids.main_mng.current = 'main_scrn'
            on_release:     app.root.ids.main_mng.transition = down_out

<SampleScreen>:
    name:                   'samp_scrn'
    BoxLayout:
        # TODO Next Screen Level:               Include nested ScreenManager with Tabs and Functions (Converting, Merging, Plotting)
        # TODO Dynamic Sample Button list:      Has to be changed later if Sample buttons are added dynamically from within Python
        Button:
            text:           'Sample'
            on_release:     app.root.ids.main_mng.current = 'main_scrn'
            on_release:     app.root.ids.main_mng.transition = down_out
            on_release:     app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.current = 'over_scrn'
            # TODO Default SubScreen Screen:    Change back to default Overview screen when leaving Sample Screen to Project Screen or Main Screen

<ProjectScreen>:
    name: 'proj_scrn'
    BoxLayout:
        padding:                (1, 0)
        RecycleView:
            size_hint_x:        0.318*1.5
            size:               self.size
            do_scroll_x:        False
            scroll_type:        ['bars', 'content']
            SampleGridLayout:
                id:             cont_samp_list
                spacing:        1
                cols:           1
                ListButton:
                    text:       'Overview'
                    on_release: app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.current = 'over_scrn'
                    on_release: app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.transition = right_in
    #                on_release: print(app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.current)
                ListButton:
                    text:       'Sample 01'
                    on_release: app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.current = 'samp_scrn'
                    on_release: app.root.ids.main_mng.ids.proj_scrn.ids.sub_mng.transition = left_out
        SubManager:
            id:                 sub_mng

# Windows
<Header>:
    size_hint_y:    None
    height:         35
    padding:        (1, 0)
    Label:
        # TODO Context Menu:                        Change to context menu instead button
        size_hint_x:0.318
    Label:
        id:         head_text
#        size_hint_x:0.682
        text:       "AMB Post-Processor"
        halign:     "center"

<Footer>:
    name:           "foot"
    size_hint_y:    None
    height:         25
    padding:        (1, 0)
    Label:
        text:       "Copyright by AMIC Angewandte Micro-Messtechnik GmbH     "
        font_size:  10
        text_size:  self.size
        halign:     "right"
        valign:     "middle"

<ClassAllScreen>:
    main_win:       "main_win"
    orientation:    'vertical'
    id:             main_win

    Header:
    MainManager:
        id:         main_mng
    Footer:
    MainMenu:
#        size_hint_x: 0.318
        size_hint_y: None
        height:      0
