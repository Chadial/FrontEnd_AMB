# https://stackoverflow.com/questions/48259400/kivy-using-popup-open
<SaveAs>:
    teinp:      teinp
    Button:
        text:   'Browse files'
        on_release: root.on_call_popup()
    TextInput:
        id:     teinp
        text:   'Path input'

<FileBrowserPopup>:
    choice:     choice
    size_hint:  None, None
    size:       app.root.width*.95, app.root.height*.95
    FileBrowser:
        id:             choice
        title:          root.title
        path:           root.path
        select_string:  "Select"
        on_success:
#            print(self.filename)
            root.dismiss()
        on_canceled:    root.dismiss()